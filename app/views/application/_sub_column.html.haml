#sub
  .user
    .user__name
      = current_user.name
    .user__action
      .user__action--left
        = link_to edit_user_registration_path do
          .fa.fa-pencil-square-o
      .user__action--right
        = link_to new_group_path do
          .fa.fa-cog
  .groups
    - groups.each do |group|
      = link_to group_messages_path(group) do
        .group
          .group__name
            = group.name
          .group__message
            今日も晴天ですね〜〜〜。
